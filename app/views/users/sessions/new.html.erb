<div id="logreg-forms">
  <%= form_for(resource, as: resource_name, class: "form-signin", url: session_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"><%= t ".sign_in" %></h1>
    <div class="social-login">
      <button class="btn facebook-btn social-btn" type="button"><span><i class="fab fa-facebook-f"></i><%= t ".sign_in_wf" %></span></button>
      <button class="btn google-btn social-btn" type="button"><span><i class="fab fa-google-plus-g"></i><%= t ".sign_in_wg" %></span></button>
    </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
       class: "form-control", placeholder: t(".email"), required: true %><br>
      <%= f.password_field :password, autofocus: true, autocomplete: "current-password",
       class: "form-control", placeholder: t(".password"), required: true %><br>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <button class="btn btn-success btn-block" type="submit"><i class="fas fa-sign-in-alt"></i> Sign in</button>
      <%= link_to t(".fogot"), new_user_password_path %>
      <hr>
      <span class="btn btn-primary btn-block">
        <%= link_to new_user_registration_path do %>
        <i class="fas fa-user-plus"></i><%= t ".sign_up" %><% end %>
      </span>
  <% end %>
</div>
