<div class="container">
   <%= link_to new_admins_film_path do %>
     <i class="fa fa-plus-square btn btn-info"><%= t ".add" %></i>
   <% end %>
   <table id="movie_list" class="table table-striped table-bordered">
      <thead>
         <th><%= t ".id" %></th>
         <th><%= t ".name" %></th>
         <th><%= t ".country" %></th>
         <th><%= t ".movie" %></th>
         <th><%= t ".trailer" %></th>
         <th><%= t ".image" %></th>
         <th class="text-center"><%= t ".action" %></th>
      </thead>
      <tbody>
        <%= render @films %>
      </tbody>
   </table>
</div>
