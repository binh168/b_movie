<div id="login_admin">
  <div class="card card-container">
    <p id="profile-name" class="profile-name-card"><%= t ".title" %></p>
    <%= image_tag Settings.image_default, id: "profile-img", class: "profile-img-card"  %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
      class: "form-signin") do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
        id: "inputEmail", class: "form-control", placeholder: t(".email_placeholder") %>
      <%= f.password_field :password, autocomplete: "current-password",
        id: "inputPassword", class: "form-control", placeholder: t(".password_placeholder") %>
      <% if devise_mapping.rememberable? %>
        <div id="remember" class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <%= f.submit t(".log_in"), class: "btn btn-lg btn-primary btn-block btn-signin" %>
    <% end %>
  </div>
</div>
