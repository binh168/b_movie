<div class="container">
  <%= link_to new_admins_category_path, {data: {toggle: "modal", target: "#exampleModal"}} do %>
    <i class="fa fa-plus-square btn btn-info"><%= t ".add" %></i>
  <% end %>
  <table id="category_list" class="table table-striped table-bordered">
    <thead>
      <th><%= t ".id" %></th>
      <th><%= t ".name" %></th>
      <th class="text-center"><%= t ".action" %></th>
    </thead>
    <tbody>
      <%= render @categories %>
    </tbody>
  </table>
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <%= render partial: "admins/categories/new", locals: {category: @category} %>
      </div>
     </div>
  </div>
</div>
