<div id="layoutSidenav_content">
  <main>
    <div class="container-fluid">
      <h1 class="mt-4"><%= t ".dashboard" %></h1>
      <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active"><%= t ".dashboard" %></li>
      </ol>
      <div class="row">
        <div class="col-xl-3 col-md-6">
          <div class="card bg-primary text-white mb-4">
            <div class="card-body"><%= t ".primary_card" %></div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a class="small text-white stretched-link"><%= t ".view_details" %></a>
              <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-md-6">
          <div class="card bg-warning text-white mb-4">
            <div class="card-body"><%= t ".warning_card" %></div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link"><%= t ".view_details" %></a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
              <div class="card-body"><%= t ".success_card" %></div>
              <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link"><%= t ".view_details" %></a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
              <div class="card-body"><%= t ".danger_card" %></div>
              <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link"><%= t ".view_details" %></a>
              <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xl-6">
          <div class="card mb-4">
            <div class="card-header"><i class="fas fa-chart-area mr-1"></i><%= t ".area" %></div>
              <div class="card-body">
                <canvas id="myAreaChart"></canvas>
              </div>
            </div>
          </div>
          <div class="col-xl-6">
            <div class="card mb-4">
              <div class="card-header"><i class="fas fa-chart-bar mr-1"></i><%= t ".bar" %></div>
                <div class="card-body">
                  <canvas id="myBarChart"></canvas>
                </div>
              </div>
            </div>
          </div>
          <div class="card mb-4">
            <div class="card-header"><i class="fas fa-table mr-1"></i><%= t ".dataTable" %></div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" cellspacing="0">
                  <thead>
                    <tr>
                      <th><%= t ".name" %></th>
                      <th><%= t ".position" %></th>
                      <th><%= t ".office" %></th>
                      <th><%= t ".age" %></th>
                      <th><%= t ".start" %></th>
                      <th><%= t ".salary" %></th>
                    </tr>
                  </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
    </div>
  </main>
</div>
